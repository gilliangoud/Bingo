<h1 class="text-center">Edit you profile</h1>

<table width="100%" class="table">
	<form method="POST" action="/profile/edit">
		<tr>
			<th>Username</th>
			<td>{{profile.username}}</td>
			<td><input name="username" class="form-control form-control-sm" type="text" value="{{profile.username}}"></td>
		</tr>
		<tr>
			<th>Name</th>
			<td>{{profile.name}} {{profile.lastName}}</td>
			<td><input name="name" class="form-control form-control-sm" type="text" value="{{profile.name}}"></td>
			<td><input name="lastName" class="form-control form-control-sm" type="text" value="{{profile.lastName}}"></td>
		</tr>
		<tr>
			<th>email</th>
			<td>{{profile.email}}</td>
			<td><input type="email" name="email" class="textField" placeholder="E-mail" value="{{profile.email}}"></td>
		</tr>
		<tr>
			<th>phone</th>
			<td>{{profile.phone}}</td>
			<td><input name="phone" class="form-control form-control-sm" type="text" value="{{profile.phone}}"></td>
		</tr>
		<tr>
			<th>gender</th>
			<td>{{profile.gender}}</td>
		</tr>
		<tr>
			<th>age</th>
			<td>{{profile.age}}</td>
		</tr>
		<tr>
			<th>coins</th>
			<td>{{profile.coins}}</td>
			<td><input name="coins" class="form-control form-control-sm" type="text" value="{{profile.coins}}"></td>
		</tr>
		<tr>
			<th>isAdmin</th>
			<td>{{profile.isAdmin}}</td>
			<td><input class="form-check-input" type="checkbox" name="isAdmin" value="true" {{#if profile.isAdmin}}checked{{/if}}></td>
		</tr>
		<tr>
			<th>avatar</th>
			<td>{{profile.avatar}}</td>
		</tr>
		<tr>
			<th>is private profile</th>
			<th>{{profile.isPrivate}}</th>
		</tr>
		<tr>
			<th><button type="reset" class="btn btn-primary">reset</button></th>
			<th><button type="submit" class="btn btn-primary">Update</button></th>
		</tr>
	</form>
</table>