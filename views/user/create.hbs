<h1 class="text-center">New custom user</h1>

<table width="100%" class="table">
	<form method="POST" action="/users/create">
		<tr>
			<th>Username</th>
			<td><input name="username" class="form-control form-control-sm" type="text" ></td>
		</tr>
		<tr>
			<th>Name</th>
			<td><input name="name" class="form-control form-control-sm" type="text"></td>
			<td><input name="lastName" class="form-control form-control-sm" type="text"></td>
		</tr>
		<tr>
			<th>email</th>
			<td><input type="email" name="email" class="textField" placeholder="E-mail"></td>
		</tr>
		<tr>
			<th>phone</th>
			<td><input name="phone" class="form-control form-control-sm" type="text"></td>
		</tr>
		<tr>
			<th>gender</th>
			<td><input class="form-check-input" type="radio" name="gender" value="male"> Male</br>
  			<input class="form-check-input" type="radio" name="gender" value="female"> Female</br>
  			<input class="form-check-input" type="radio" name="gender" value="other"> Other</br></td>
		</tr>
		<tr>
			<th>age</th>
			<td><input name="age" class="form-control form-control-sm" type="number"></td>
		</tr>
		<tr>
			<th>coins</th>
			<td><input name="coins" class="form-control form-control-sm" type="number"></td>
		</tr>
		<tr>
			<th>isAdmin</th>
			<td><input class="form-check-input" type="checkbox" name="isAdmin" value="true"></td>
		</tr>
		<tr>
			<th>avatar</th>
			<td>not yet supported</td>
		</tr>
		<tr>
			<th>is private profile</th>
			<td><input class="form-check-input" type="checkbox" name="private" value="true"></td>
		</tr>
		<tr>
			<th><button type="reset" class="btn btn-primary">reset</button></th>
			<th><button type="submit" class="btn btn-primary">Create</button></th>
		</tr>
	</form>
</table>